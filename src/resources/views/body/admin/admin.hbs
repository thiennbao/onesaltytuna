<section id="super-wallpaper">
    <img src="/img/general/wallpaper-2.jpg" alt="">
    <h1>CLERK MANAGE</h1>
</section>

<section class="indent" id="add">
    <h2 class="heading">ADD NEW CLERK</h2>
    <form action="/admin/addClerk" method="POST" onchange="addAuth()">
        <input type="hidden" name="supername" id="supername">
        <input type="hidden" name="password">
        <input type="text" name="name" placeholder="Name">
        <input type="text" name="phone" placeholder="Phone">
        <input type="submit" value="ADD">
    </form>
</section>

<section class="indent">
    <h2 class="heading">CLERK LIST</h2>
    <div id="list">
    {{#each super}}
        <div>
            <p>{{this.name}}</p>
            <p>{{this.phone}}</p>
            <p>{{this.email}}</p>
            <p>{{this.address.detail}}</p>
        </div>
    {{/each}}
    </div>
</section>

<script src="/javascript/clerk.js"></script>