            </div>
            <div class="order-content">
                <h3>Content</h3>
                <table>
                    <span class="cart" style="display: none;">{{this.content}}</span>
                    <thead>
                        <td>No</td>
                        <td>Dish</td>
                        <td>Price</td>
                        <td>Quantity</td>
                        <td>Total</td>
                    </thead>
                    <tbody>
                    </tbody>
                    <tfoot>
                        <td class="grandtotal" colspan="5"><p><span></span></p></td>
                    </tfoot>
                </table> 
            </div>
        </div>
    {{/each}}
    <span id="storage-list-end"></span>
</section>

