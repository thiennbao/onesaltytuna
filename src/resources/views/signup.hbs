<div id="signup" {{#if success}}style="filter: blur(10px)"{{/if}}>
    <div id="signup-form">
        <h3>Sign up</h3>
        <form method="POST" action="signup">
            <input id="username" type="text" name="username" placeholder="User name" onblur="usernameValidate('{{user.username}}')" value="{{user.username}}" class="{{#if notAvailable}}bad{{/if}}">
            <label for="username">{{#if notAvailable}} This user name is not available {{/if}}</label>
            <input id="password" type="password" name="password" placeholder="Password" onblur="passwordValidate()">
            <label for="password"></label>
            <input id="phone" type="tel" name="phone" placeholder="Phone" onblur="phoneValidate()" value="{{user.phone}}" class="{{#if notAvailable}}good{{/if}}">
            <label for="phone"></label>
            <input id="email" type="email" name="email" placeholder="Email" onblur="emailValidate()" value="{{user.email}}" class="{{#if notAvailable}}good{{/if}}">
            <label for="email"></label>
            <input id="submit" type="submit" value="SIGN UP" disabled>
        </form>
        <p>Already have an account? <a href="/auth/login">Log in</a></p>
    </div>
</div>

{{#if success}}
    <div id="success">
        <div id="success-box">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
            </svg>
            <p>Sign up successfully !!!</p>
            <a href="/auth/login"><button>Login</button></a>
        </div>
    </div>
{{/if}} 

<script src="/javascript/signup.js"></script>